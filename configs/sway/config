#{{{ Move focus around outputs, move windows/containers to outputs, move whole workspaces to outputs [MODE]
   # Choose output to focus using numbers
   bindsym $mod+F1 exec ~/Scripts/SwayMultiMonitor/focus_output 1
   bindsym $mod+F2 exec ~/Scripts/SwayMultiMonitor/focus_output 2
   bindsym $mod+F3 exec ~/Scripts/SwayMultiMonitor/focus_output 3
   bindsym $mod+F4 exec ~/Scripts/SwayMultiMonitor/focus_output 4
   bindsym $mod+F5 exec ~/Scripts/SwayMultiMonitor/focus_output 5
   bindsym $mod+F6 exec ~/Scripts/SwayMultiMonitor/focus_output 6
   bindsym $mod+F7 exec ~/Scripts/SwayMultiMonitor/focus_output 7
   bindsym $mod+F8 exec ~/Scripts/SwayMultiMonitor/focus_output 8
   bindsym $mod+F9 exec ~/Scripts/SwayMultiMonitor/focus_output 9
   bindsym $mod+F10 exec ~/Scripts/SwayMultiMonitor/focus_output 10

   # Move focused window/container to workspace
   bindsym $mod+Shift+F1 exec ~/Scripts/SwayMultiMonitor/move_to_output 1
   bindsym $mod+Shift+F2 exec ~/Scripts/SwayMultiMonitor/move_to_output 2
   bindsym $mod+Shift+F3 exec ~/Scripts/SwayMultiMonitor/move_to_output 3
   bindsym $mod+Shift+F4 exec ~/Scripts/SwayMultiMonitor/move_to_output 4
   bindsym $mod+Shift+F5 exec ~/Scripts/SwayMultiMonitor/move_to_output 5
   bindsym $mod+Shift+F6 exec ~/Scripts/SwayMultiMonitor/move_to_output 6
   bindsym $mod+Shift+F7 exec ~/Scripts/SwayMultiMonitor/move_to_output 7
   bindsym $mod+Shift+F8 exec ~/Scripts/SwayMultiMonitor/move_to_output 8
   bindsym $mod+Shift+F9 exec ~/Scripts/SwayMultiMonitor/move_to_output 9
   bindsym $mod+Shift+F10 exec ~/Scripts/SwayMultiMonitor/move_to_output 10

   # Move whole workspaces to different outputs (MODE - Shortcut: MOD+O)
   mode "move_workspace" {
        bindsym $up exec ~/Scripts/SwayMultiMonitor/move_workspace_to_output up
        bindsym $down exec ~/Scripts/SwayMultiMonitor/move_workspace_to_output down
        bindsym $left exec ~/Scripts/SwayMultiMonitor/move_workspace_to_output left
        bindsym $right exec ~/Scripts/SwayMultiMonitor/move_workspace_to_output right
        
        bindsym Escape mode "default"
        bindsym Return mode "default"
        bindsym $mod+o mode "default"
    }
    bindsym $mod+o mode "move_workspace"  
#}}}
#{{{ Create vertical/horizontal container split, switch between layouts, fullscreen, toggle tiling/floaing, focus parent/child
    # You can "split" the current object of your focus with
    # $mod+b or $mod+v, for horizontal and vertical splits
    # respectively.
    bindsym $mod+y splith
    bindsym $mod+x splitv

    # Switch the current container between different layout styles
    bindsym $mod+z layout toggle split
    bindsym $mod+Shift+c layout stacking
    bindsym $mod+c layout tabbed

    # Make the current focus fullscreen
    bindsym $mod+f fullscreen

    # Toggle the current focus between tiling and floating mode
    bindsym $mod+Shift+space floating toggle

    # Swap focus between the tiling area and the floating area
    bindsym $mod+space focus mode_toggle

    # Move focus to the parent container
    bindsym $mod+p focus parent

    # Move focus to the parent container
    bindsym $mod+Shift+P focus child 
#}}}
#{{{ Scratchpad:
    # Sway has a "scratchpad", which is a bag of holding for windows.
    # You can send windows there and get them back later.

    # Show the next scratchpad window or hide the focused scratchpad window.
    # If there are multiple scratchpad windows, this command cycles through them.
    bindsym $mod+minus scratchpad show

    # Move the currently focused window to the scratchpad
    bindsym $mod+Shift+minus move scratchpad
#}}}
#{{{ Resizing windows/containers, gaps [MODE]:

# Resize window/container (MODE - Shortcut: MOD+R)
mode "resize" {
    # left will shrink the containers width
    # right will grow the containers width
    # up will shrink the containers height
    # down will grow the containers height
    bindsym $left resize grow left 5 ppt or 20px
    bindsym Shift+$left resize shrink left 5 ppt or 20px
    bindsym $right resize grow right 5 ppt or 20px
    bindsym Shift+$right resize shrink right 5 ppt or 20px
    bindsym $up resize grow up 20px
    bindsym Shift+$up resize shrink up 5 ppt or 20px
    bindsym $down resize grow down 5 ppt or 20px
    bindsym Shift+$down resize shrink down 5 ppt or 20px

    # Gaps resizing
    bindsym $mod+minus gaps inner all plus 5px
    bindcode $mod+21 gaps inner all minus 5px

    # Return to default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"
#}}}
#{{{ Multimedia keys
    bindsym XF86AudioPlay exec playerctl play-pause
    bindsym XF86AudioNext exec playerctl next
    bindsym XF86AudioPrev exec playerctl previous
    bindsym XF86AudioStop exec playerctl stop
    bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle
    bindsym XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +5%
    bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -5%
    bindsym XF86MonBrightnessUp exec light -A 5
    bindsym XF86MonBrightnessDown exec light -U 5
#}}}
